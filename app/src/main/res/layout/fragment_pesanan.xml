<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Order.Pemesanan.FragmentPesanan">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

      <TextView
          android:id="@+id/titlePesanan"
          android:layout_centerVertical="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
         android:text="@string/numOfPesanan"
          android:textSize="20sp"/>

      <TextView
         android:id="@+id/pesananNumber"
          android:layout_centerVertical="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toEndOf="@id/titlePesanan"
          android:textSize="20sp"/>


      <Button
         android:id="@+id/orderProcessButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
         android:text="@string/prosesBtn"
         android:layout_alignParentEnd="true"/>


   </RelativeLayout>

      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/lvPemesanan"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>



   </LinearLayout>

</FrameLayout>